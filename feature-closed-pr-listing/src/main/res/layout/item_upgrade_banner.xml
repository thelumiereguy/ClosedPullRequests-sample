<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_upgrade_banner"
    android:gravity="end"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingTop="22dp"
    android:paddingEnd="12dp"
    android:paddingBottom="22dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unlimited_content_whenever_you_need_it"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_upgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:minWidth="74dp"
        app:rippleColor="#33000000"
        android:minHeight="23dp"
        android:paddingTop="6dp"
        android:text="@string/view_plans"
        android:textColor="#446FF3"
        android:textSize="10sp"
        app:cornerRadius="6dp"/>

</LinearLayout>